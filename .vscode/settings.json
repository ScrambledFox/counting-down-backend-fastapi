{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.analysis.typeCheckingMode": "strict",
    // Setup run and debug for fastapi, we normally run by: uv run fastapi dev app/main.py
    "launch": {
        "configurations": [
            {
                "name": "Python: FastAPI",
                "type": "debugpy",
                "request": "launch",
                "module": "uvicorn",
                "args": [
                    "app.main:app",
                    "--reload"
                ],
                "jinja": true
            }
        ]
    }
}